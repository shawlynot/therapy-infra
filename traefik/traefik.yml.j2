entryPoints:
  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https

  websecure:
    address: :443
    http:
      tls:
        domains:
          - main: {{ cert.domain }}
    
providers:
  file:
    directory: /etc/traefik

log:
  level: DEBUG