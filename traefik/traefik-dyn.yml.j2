tls:
  certificates:
    - certFile: "/etc/certs/fullchain.cer"
      keyFile: "/etc/certs/{{ cert.domain }}.key"

http:
  services:
    authentik:
      loadBalancer:
        servers:
        - url: "http://authentik-server:9000"
  routers:
    authentik:
      tls: true
      rule: "Host(`{{ cert.domain }}`) && PathPrefix(`/auth`)"
      service: authentik