tls:
  certificates:
    - certFile: "/etc/certs/fullchain.cer"
      keyFile: "/etc/certs/{{ cert.domain }}.key"
  stores:
    default:
      defaultCertificate:
        certFile: "/etc/certs/fullchain.cer"
        keyFile: "/etc/certs/{{ cert.domain }}.key"

http:
  services:
    auth-server:
      loadBalancer:
        servers:
        - url: "http://auth-server:9000"
  routers:
    auth:
      tls: {}
      rule: "Host(`auth.{{ cert.domain }}`)"
      service: auth-server
